<odoo>


    <record id="action_product_variant" model="ir.actions.act_window">
        <field name="name">Registro de variantes de productos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.variant</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Registre su variante de producto para restaurantes
          </p><p>

          </p>
        </field>
    </record>

    <record id="product_variant_tree_view" model="ir.ui.view">
        <field name="name">product.variant.tree</field>
        <field name="model">product.variant</field>
        <field name="arch" type="xml">
            <tree string="Productos" multi_edit="1">
                <field name="variant_name" string="Nombre de la variante" readonly="1"/>
                <field name="product_id" string="Producto" readonly="1"/>
                <field name="product_target" string="Producto objetivo" readonly="1"/>
                <field name="price" string="Precio" readonly="1"/>
            </tree>
        </field>
    </record>




    <!-- Menus -->
    <menuitem id="pos_restaurant" sequence="0" name="POSRestaurant"/>

    <menuitem
        id="menu_action_product_product_form"
        name="Variantes de Productos"
        sequence="1"
        action="action_product_variant"
        parent="pos_restaurant"/>




